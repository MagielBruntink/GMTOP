	<!-- GENERAL -->
	<string id="ui_mcm_SMR_smr_loot_random_items">
		<text>Scattered Loot</text>
	</string>
	<string id="ui_mcm_SMR_smr_loot_random_items_desc">
		<text>Changes the amount of items found lying around in the world.\n
		This will only have an effect when starting a new game.</text>
	</string>
	<string id="ui_mcm_SMR_smr_loot_general_info">
		<text>The options below add a chance to find some extra items in stash boxes and on dead NPCs.\n
		Very helpful if you're playing with the "None" base population preset.</text>
	</string>
	<!-- PDA MESSAGES -->
	<string id="ui_mcm_SMR_smr_loot_send_message">
		<text>Show PDA Notification</text>
	</string>
	<string id="ui_mcm_SMR_smr_loot_send_message_desc">
